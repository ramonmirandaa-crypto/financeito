FROM node:20

# Install PostgreSQL client and cron to run scheduled backups
RUN apt-get update && apt-get install -y postgresql-client cron \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install Node dependencies declared in package.json
COPY package*.json ./
RUN npm install

# Copy backup scripts
COPY . .

ENTRYPOINT ["/bin/sh", "/app/cron.sh"]
